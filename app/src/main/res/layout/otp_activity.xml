<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter OTP"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="#000" />
        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/monday1logo" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="We have sent 6 digit code on "
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_otp_1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#8BB02A"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:inputType="number">

                </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_otp_2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textColor="#8BB02A"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:inputType="number">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_otp_3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textColor="#8BB02A"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:inputType="number">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_otp_4"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:textColor="#8BB02A"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:inputType="number">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_otp_5"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#8BB02A"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:inputType="number">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_otp_6"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#8BB02A"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:inputType="number">

                </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We sent an OTP to your number"
                android:layout_marginVertical="10dp"
                android:textColor="#000"/>



            <Button
                android:id="@+id/vbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BB02A"
                android:text="Verify"
                android:textColor="@android:color/white" />



        </LinearLayout>

    </RelativeLayout>


</LinearLayout>